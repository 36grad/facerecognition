<div class="section" id="facerecognition">

{{#if clustersByName}}
	<h2>
		{{appName}}
	</h2>
	<br>
	<h3><a class="title-icon icon-view-previous"></a>{{personName}}</h3>
	<div id="persons-navigation">
		{{#each clustersByName}}
			<h2 class="person-title icon-user" data-id="{{this.id}}">
				<span>{{this.name}}</span>
				<a class="title-icon icon-rename"></a>
			</h2>
			<div class="persons-previews">
				{{#each this.faces}}
					<a target="_blank" href="{{file-url}}">
						<div class="face-preview lozad" data-background-image="{{thumb-url}}" width="50" height="50"></div>
					</a>
				{{/each}}
			</div>
		{{/each}}
	</div>
{{else if personName}}
	<h2>
		{{appName}}
	</h2>
	<br>
	<h3><a class="title-icon icon-view-previous"></a>{{personName}}</h3>
	<div id="persons-previews">
		{{#each personImages}}
			<div class="image-box">
				<a target="_blank" href="{{file-url}}">
					<div class="face-preview-big lozad" data-background-delimiter="\" data-background-image="{{{thumb-url}}}" width="128" height="128"></div>
				</a>
			</div>
		{{/each}}
	</div>
	{{#if multipleClusters}}
		<button id="show-more-clusters" type="button" class="primary">
			{{showMoreButton}}
		</button>
	{{/if}}
{{else if cluster}}
	<h2>
		<a class="title-icon icon-view-previous"></a>
		{{appName}}
	</h2>
	<div id="persons-navigation">
		<h2 class="person-title icon-user" data-id="{{cluster.id}}">
			<span>{{cluster.name}}</span>
			<a class="title-icon icon-rename"></a>
		</h2>
		<div class="persons-previews">
			{{#each cluster.faces}}
				<a target="_blank" href="{{file-url}}">
					<div class="face-preview lozad" data-background-image="{{thumb-url}}" width="50" height="50"></div>
				</a>
			{{/each}}
		</div>
	</div>
	<button id="show-more-clusters" type="button" class="primary">
		{{showMoreButton}}
	</button>
{{else if persons}}
	<h2>
		{{appName}}
	</h2>
	<input id="enableFacerecognition" name="enableFacerecognition" type="checkbox" class="checkbox" value="1" {{#if enabled}}checked{{/if}}>
	<label for="enableFacerecognition">{{enableDescription}}</label><br>
	<br>
	<h3>{{t "facerecognition" "Persons"}}</h3>
	<div id="persons-previews">
		{{#each persons}}
			<div class="person-box" data-id="{{name}}">
				<div class="face-preview-big lozad" data-background-image="{{thumb-url}}" width="128" height="128"></div>
				<p class="person-name">
					<span>{{name}}</span>
				</p>
				<p class="person-desc">{{noPhotos count}}</p>
			</div>
		{{/each}}
	</div>
{{else if loaded}}
	<h2>
		{{appName}}
	</h2>
	<input id="enableFacerecognition" name="enableFacerecognition" type="checkbox" class="checkbox" value="1" {{#if enabled}}checked{{/if}}>
	<label for="enableFacerecognition">{{enableDescription}}</label><br>
	<div class="emptycontent">
		<div class="icon-user svg"></div>
		<h2>
			{{emptyMsg}}
		</h2>
		<p>
		{{emptyHint}}
		</p>
	</div>
{{else}}
	<h2>
		{{appName}}
	</h2>
	<div class="emptycontent">
		<div class="icon-user svg"></div>
		<h2>
			{{loadingMsg}}
		</h2>
		<img class="loadingimport" src="{{loadingIcon}}"/>
	</div>
{{/if}}

</div>